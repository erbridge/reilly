{
  "name": "reilly",
  "version": "1.0.0",
  "description": "Check conversational English for insensitive language",
  "repository": "erbridge/reilly",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">= 10.0.0"
