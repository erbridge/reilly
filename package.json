    "retext-equality": "^5.6.0",
    "unified": "^9.2.0",
    "vfile": "^4.2.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.19",
    "husky": "^4.3.6",
    "jest": "^25.5.4",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "pre-commit": "pretty-quick --staged"
